# Security configuration for campaign uploads directory

<Files "\*">
Order Allow,Deny
Allow from all
</Files>

# Block potentially dangerous file types

<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
Order Allow,Deny
Deny from all
</FilesMatch>

# Allow only image files

<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
Order Allow,Deny
Allow from all
</FilesMatch>
